<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css?=v4" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
    
    
</head>
<body>
<div class=page>
    <h1><img src="/images/christmasx3.png" alt="Icon1"/>Chirp!</h1>
    <div class=navigation>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <div>
                <a href="/@(User.Identity.Name)">My Timeline</a> |
                <a href="/">Public Timeline</a> |
                <a href="/Identity/Account/Manage">Manage Account</a> |
                <a href="/Identity/Account/Logout">Logout [@(User.Identity.Name)]</a>
            </div>
        }
        else
        {
            <div>
                <a href="/">Public ChirpLine</a> |
                <a href="/Identity/Account/Register">Register account</a>
                <a href="/Identity/Account/Login">Login</a>
            </div>
        }
    </div>
    <div id="cook
ieConsent" class="cookie-consent">
        <div class="cookie-content">
            <div class="cookie-icon">🍪</div>
            <div class="cookie-text">
                <h3>We use cookies</h3>
                <p>We use cookies to have fun and earn money lol!</p>
                <div class="cookie-links">
                    <a href="/privacy" class="cookie-link">Cookie Policy</a>
                    <a href="/privacy#preferences" class="cookie-link">Preferences</a>
                </div>
            </div>
            <div class="cookie-actions">
                <button id="cookieAccept" class="cookie-btn accept-btn">Accept All</button>
                <button id="cookieReject" class="cookie-btn reject-btn">Reject Non-Essential</button>
            </div>
        </div>
    </div>    
    
    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
