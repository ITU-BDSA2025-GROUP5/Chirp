@model Chirp.Razor.Pages.PublicModel

@if (!Model.ShowConsent)
{
    return;
}

<div class="cookie-consent">
    <div class="cookie-content">
        <div class="cookie-icon">üç™</div>
        <div class="cookie-text">
            <h3>We use cookies</h3>
            <p>We use cookies to enhance your experience, analyze site traffic, and for functionality. By clicking "Accept All", you consent to our use of cookies.</p>
            <div class="cookie-links">
                <a href="/Privacy" class="cookie-link">Cookie Policy</a>
                <a href="/Privacy#preferences" class="cookie-link">Preferences</a>
            </div>
        </div>
        <div class="cookie-actions">
            <form method="post" asp-page="/Shared/_CookieConsent" asp-page-handler="Accept">
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                <button type="submit" class="cookie-btn accept-btn">Accept All</button>
            </form>
            <form method="post" asp-page="/Shared/_CookieConsent" asp-page-handler="Reject">
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                <button type="submit" class="cookie-btn reject-btn">Reject Non-Essential</button>
            </form>
        </div>
    </div>
</div>