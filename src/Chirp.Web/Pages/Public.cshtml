@page "/{pagenumber:int?}"

@model Chirp.Razor.Pages.PublicModel
@inject Chirp.Infrastructure.ICheepService CheepService
@{
    ViewData["Title"] = "BBL CHIRP!";
    Layout = "Shared/_Layout";   
}

<div>
    <h2> Public Timeline </h2>
    @if (User?.Identity?.IsAuthenticated == true){
    <h3>What's on your mind @Model.UserName! ?</h3>
        <form method="post"
            action='@Url.Page("./Public",
            pageHandler: "NewMessage",
            values: new { pagenumber = Model.PageNumber })'>
                @Html.AntiForgeryToken()
                <input type="text" name="Input" value="">
                <input type="submit" value="Share">
        </form>
    }
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li class="cheep">
                    <div class="profile-picture-container">
                        @if (cheep.User.ProfilePicture != null)
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(cheep.User.ProfilePicture)" 
                                alt="Profile Picture" class="profile-picture" />
                        }
                        else
                        {
                            <img src="/images/default-profile.png" 
                                alt="Default Profile Picture" class="profile-picture" />
                        }
                    </div>

                    <div class="cheep-content">
                        <div class="cheep-header">
                            <strong class="cheep-username">
                                <a href="/@cheep.User.UserName">@cheep.User.UserName</a>
                            </strong>
                        </div>

                        <div class="cheep-text">
                            @cheep.Text
                        </div>

                        <div class="cheep-footer">
                            <small class="cheep-timestamp">@cheep.TimeStamp</small>

                            <div class="followField">
                                @if (User?.Identity?.IsAuthenticated == true && Model.UserName != @cheep.User.UserName)
                                {
                                    if (Model.followedUsers.Contains(cheep.User.Id))
                                    {
                                        // Already following -> Unfollow
                                        <form method="post" asp-page-handler="Unfollow">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="unfolloweeId" value="@cheep.User.Id" />
                                            <button type="submit" class="cheep-follow-btn">
                                                Unfollow
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        // Not following -> Follow
                                        <form method="post" asp-page-handler="Follow">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="followeeId" value="@cheep.User.Id" />
                                            <button type="submit" class="cheep-follow-btn">
                                                Follow
                                            </button>
                                        </form>
                                    }
                                    /*
                                    @* Like / Unlike *@
                                    if (cheep.Likes != null && Model.CurrentUser != null && cheep.Likes.Contains(Model.CurrentUser.Id))
                                    {
                                        <form method="post" asp-page-handler="Unlike">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cheepId" value="@cheep.CheepId" />
                                            <button type="submit" class="like-toggle-button">
                                                <img src="/images/unlike.png" alt="Unlike" class="like-button" />
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="Like">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cheepId" value="@cheep.CheepId" />
                                            <button type="submit" class="like-toggle-button">
                                                <img src="/images/like.png" alt="Like" class="like-button" />
                                            </button>
                                        </form>
                                    } */
                                }
                            
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <div class="pager">
        <a class="btn" href="/@(Model.PageNumber - 1)">← Previous</a>
        <a class="btn" href="/@(Model.PageNumber + 1)">Next →</a>
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
   
</div>
